extends ../layout

block content

  .page-header
    h3 Verify Security Code
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='tel') Security Code
      .col-sm-3
        input.form-control(type='number', name='securityCode', id='securityCode', placeholder='sent by SMS', autofocus, required)
      .col-sm-3
        button.col-sm-6.btn.btn-primary(type='submit')
          i.fa.fa-check
          | Submit
